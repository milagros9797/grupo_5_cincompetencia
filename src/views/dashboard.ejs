<!DOCTYPE html>
<html lang="en">

<%- include('./partials/headDashboard',{ title:'Dashboard'})%>

<body>
    <%- include('./partials/headerDashboard') %>

    <main class="container">
        <section class="row my-5">
         <div class="col-12 col-md-10 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="cart-title">Indumentaria </h4>
                    <a class="btn btn-dark" href="/products/agregar">Nuevo</a>
                </div>
                <div class="card-body table-responsive">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Color</th>
                            <th scope="col">Talle</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Categoría</th>
                            

                          </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(({id,name,description, color, talle, price,category}) => {%>

                                <tr>
                                    <th scope="row"><%=id %></th>
                                    <td><%=name %></td>
                                    <td><%=description %></td>
                                    <td><%=color %></td>
                                    <td><%=talle %></td>
                                    <td><%=price %></td>
                                    <td><%=category %></td>
                                    
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a class="btn btn-sm btn-outline-success border-none" href="./products/editar/<%= id %>"><i class="fa-solid fa-pencil"></i></a>
						            <button type="button" class="action-button delete btn btn-sm btn-outline-danger border-none" data-bs-toggle="modal" data-bs-target="#warningDeleteModal<%= id %>"><i class="fa-solid fa-trash"></i></button>
                                      <%- include('./partials/modal-warning-delete-product-admin',{
                                        id,name
                                      }) %> 

                                        </div>
                                    </td>
                                  </tr>
                               
                
                            <% }) %>                    

                        </tbody>
                      </table>

                </div>

            </div>

         </div>


        </section>

    </main>

    <%- include('./partials/footer') %>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>	

</body>
</html>